int[] myNum = {7, 15, 37, 75, 160};
//chance % --> 5% 20% 50% 20% 5%
PFont font; 
int x, y;
int index;
int chance;

void setup(){
  size(720, 480);
  background(255);
  frameRate(5);
  //printArray(PFont.list());
  font = createFont("Verdana", 160);
  textFont(font);
}

void draw(){
  chance = int(random(100));
  x = int(random(width));
  y = int(random(height));
  if (chance<50) index = 2;
  else if (chance<70) index = 1;
  else if (chance<90) index = 3;
  else if (chance<95) index = 0;
  else index = 4;
  fill(255);
  ellipse(x, y, myNum[index]*2, myNum[index]*2);
  fill(30);
  textSize(myNum[index]);
  textAlign(CENTER, CENTER);
  text(myNum[index], x, y);
  println(myNum[index]);
}
